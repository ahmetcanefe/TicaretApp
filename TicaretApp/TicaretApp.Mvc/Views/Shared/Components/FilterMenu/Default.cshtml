@model TicaretApp.Mvc.Models.FilterMenuViewModel

<div id="aside" class="col-md-3">
    <!-- aside Widget -->
    <form asp-controller="Product" asp-action="Filter" method="post">
        <div class="aside">
            <button type="submit"> Ara</button>
            <h3 class="aside-title">Categories</h3>
            <div class="checkbox-filter">
                <div class="store-filter clearfix">
                    <div class="store-sort">
                        <label>
                            Sort By:
                            <select name="orderBy" class="input-select">
                                <option value="0">Artan Fiyat</option>
                                <option value="1">Azalan Fiyat</option>
                                <option value="2">En Çok Görüntülenen</option>
                                <option value="3">En Az Görüntülenen</option>
                            </select>
                        </label>

                        <label>
                            Show:
                            <select class="input-select">
                                <option value="0">20</option>
                                <option value="1">50</option>
                            </select>
                        </label>
                    </div>
                    <ul class="store-grid">
                        <li class="active"><i class="fa fa-th"></i></li>
                        <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                    </ul>
                </div>
                @foreach (var category in Model.CategoriesWithCount)
                {
                    <div class="input-checkbox">
                        <input type="checkbox" id="category-@category.Category.Id" name="categoryIds" value="@category.Category.Id">
                        <label for="category-@category.Category.Id">
                            <span></span>
                            @category.Category.Name
                            <small>(@category.Count)</small>
                        </label>
                    </div>
                }

            </div>
        </div>
        <!-- /aside Widget -->
        <!-- aside Widget -->
        <div class="aside">
            <h3 class="aside-title">Price</h3>
            <div class="price-filter">
                <div></div>
                <div class="input-number price-min">
                    <input name="priceMin" min="1" step="1" max="99999" value="1" type="number">
                    <span class="qty-up">+</span>
                    <span class="qty-down">-</span>
                </div>
                <span>-</span>
                <div class="input-number price-max">
                    <input name="priceMax" type="number" max="99999" step="-1" min="1" value="99999">
                    <span class="qty-up">+</span>
                    <span class="qty-down">-</span>
                </div>
            </div>
        </div>
        <!-- /aside Widget -->
        <!-- aside Widget -->
        <div class="aside">
            <h3 class="aside-title">Brand</h3>
            <div class="checkbox-filter">
                @foreach (var brand in Model.Brands)
                {
                    <div class="input-checkbox">
                        <input type="checkbox" id="brand-@brand.Id" name="brandIds" value="@brand.Id">
                        <label for="brand-@brand.Id">
                            <span></span>
                            @brand.Name
                            <small>(@brand.Products.Count)</small>
                        </label>
                    </div>
                }
            </div>
        </div>
        <!-- /aside Widget -->
        <!-- aside Widget -->
        <!-- /aside Widget -->
    </form>
</div>